rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Anyone can read (public assets)
    match /{allPaths=**} {
      allow read: if true;
    }
    // Only staff uploads (သင့် UX အလိုက်ပြင်လို့ရ)
    match /course-images/{file=**} {
      allow write: if request.auth != null && ['owner','admin','instructor','ta']
        .hasAny([get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role]);
    }
    match /lesson-videos/{file=**} {
      allow write: if request.auth != null && ['owner','admin','instructor','ta']
        .hasAny([get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role]);
    }
  }
}