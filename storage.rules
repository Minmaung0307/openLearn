rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} { allow read: if true; }
    match /lesson-attachments/{file=**} {
      allow write: if request.auth != null && ['owner','admin','instructor','ta']
        .hasAny([get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role]);
    }
    match /lesson-videos/{file=**} {
      allow write: if request.auth != null && ['owner','admin','instructor','ta']
        .hasAny([get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role]);
    }
    match /assignment-submits/{file=**} {
      allow write: if request.auth != null;
    }
  }
}
