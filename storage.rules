rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Public static read
    match /{allPaths=**} {
      allow read: if true;
    }

    // Staff-only writable buckets for teaching assets
    match /course-images/{file=**} {
      allow write: if request.auth != null
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role
           in ['owner','admin','instructor','ta'];
    }
    match /lesson-videos/{file=**} {
      allow write: if request.auth != null
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role
           in ['owner','admin','instructor','ta'];
    }

    // Students submit to their folder (optional pattern)
    match /assignment-submits/{uid}/{file=**} {
      allow write: if request.auth != null && request.auth.uid == uid;
      allow read: if request.auth != null && (request.auth.uid == uid
        || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['owner','admin','instructor','ta']);
    }
  }
}