{
  "rules": {
    "rooms": {
      "$room": {
        ".read": "auth != null",
        ".write": "auth != null",
        "messages": {
          "$id": {
            ".validate": "newData.hasChildren(['user','text','ts']) && newData.child('text').isString() && newData.child('text').val().length > 0 && newData.child('text').val().length <= 2000 && newData.child('ts').isNumber()"
          }
        }
      }
    }
  }
}